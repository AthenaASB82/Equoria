{
  "name": "backend",
  "version": "1.0.0",
  "description": "Equoria Backend - Horse Simulation Game API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "dev": "nodemon server.js",
    "start": "node server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "seed": "node seed/horseSeed.js",
    "seed:dev": "cross-env NODE_ENV=development node seed/horseSeed.js",
    "seed:shows": "node seed/seedShows.js",
    "seed:shows:dev": "cross-env NODE_ENV=development node seed/seedShows.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "horse",
    "simulation",
    "game",
    "api",
    "breeding",
    "competition"
  ],
  "author": "Equoria Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "pg": "^8.16.0",
    "prisma": "^6.8.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
