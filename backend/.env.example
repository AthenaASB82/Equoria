# ðŸ”’ EQUORIA BACKEND ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your production values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://username:password@localhost:5432/equoria"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/equoria_test"

# ===== SECURITY CONFIGURATION =====
# CRITICAL: Change these in production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
SESSION_SECRET="your-session-secret-change-in-production-min-32-chars"
BCRYPT_ROUNDS=12

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window
AUTH_RATE_LIMIT_MAX=5        # login attempts per window

# ===== CORS CONFIGURATION =====
CORS_ORIGIN="http://localhost:3000,https://yourdomain.com"
CORS_CREDENTIALS=true

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===== MONITORING & ALERTS =====
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_ALERTS=true
ALERT_EMAIL="security@yourdomain.com"

# ===== FILE UPLOAD LIMITS =====
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# ===== GAME CONFIGURATION =====
TRAINING_COOLDOWN_DAYS=7
BREEDING_COOLDOWN_DAYS=30
MAX_TRANSACTION_AMOUNT=10000000

