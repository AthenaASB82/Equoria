{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
    "no-var": "error",
    "no-extra-semi": "error",

    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"],
    "object-curly-spacing": ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "**/tests/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
